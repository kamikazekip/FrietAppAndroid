<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:onClick="onTapMainView"
    tools:context="svenerik.com.frietappandroid.DishActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp"
        android:text="Bestelling"
        android:autoText="false"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/dishTextField"
        android:layout_alignEnd="@+id/dishTextField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/dishTextField"
        android:gravity="center_vertical|center_horizontal"
        android:backgroundTint="@android:color/black"
        android:textColor="#fffba907"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/dishListView"
        android:layout_alignEnd="@+id/dishListView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bestellen"
        android:id="@+id/placeDishButton"
        android:onClick="onPlaceDish"
        android:background="#fffba907"
        android:textSize="20dp"
        android:layout_below="@+id/dishTextField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dishListView"
        android:layout_marginTop="92dp"
        android:layout_below="@+id/dishTextField"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
